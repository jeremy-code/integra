{
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts", "**/*.tsx", "tsup.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["es2018", "esnext.asynciterable"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}
